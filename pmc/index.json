{
  "settings": {
    "index.number_of_shards": {{number_of_shards | default(5)}},
    "index.number_of_replicas": {{number_of_replicas | default(0)}},
    "index.cache.query.enable": false
  },
  "mappings": {
    "articles": {
      "_source": {
        "enabled": {{ source_enabled | default(true) | tojson }}
      },
      "dynamic": "strict",
      "_all": {
        "enabled": false
      },
      "properties": {
        "name": {
          "type": "string",
          "index": "not_analyzed"
        },
        "journal": {
          "type": "string"
        },
        "date": {
          "type": "string"
        },
        "volume": {
          "type": "string"
        },
        "issue": {
          "type": "string"
        },
        "accession": {
          "type": "string",
          "index": "not_analyzed"
        },
        "timestamp": {
          "type": "date",
          "format": "yyyy-MM-dd HH:mm:ss"
        },
        "pmid": {
          "type": "integer"
        },
        "body": {
          "type": "string"
        }
      }
    }
  }
}
