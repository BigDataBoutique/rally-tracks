{
  "settings": {
    "index.number_of_shards": {{number_of_shards | default(5)}},
    "index.number_of_replicas": {{number_of_replicas | default(0)}},
    "index.cache.query.enable": false
  },
  "mappings": {
    "doc": {
      "dynamic": "strict",
      "_source": {
        "enabled": {{ source_enabled | default(true) | tojson }}
      },
      "properties": {
      	"user": {
          "index": "not_analyzed",
          "type": "string"
        },
        "creationDate": {
          "type": "date"
        },
        "title": {
          "type": "string"
        },
        "questionId": {
          "index": "not_analyzed",
          "type": "string"
        },
        "answerId": {
          "index": "not_analyzed",
          "type": "string"
        },
        "acceptedAnswerId": {
          "index": "not_analyzed",
          "type": "string"
        },
        "tags": {
          "index": "not_analyzed",
          "type": "string"
        },
        "body": {
          "type": "string"
        },
        "type": {
          "index": "not_analyzed",
          "type": "string"
        }
      }
    }
  }
}
